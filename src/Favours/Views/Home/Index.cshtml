@{
    ViewBag.Title = "Welcome";
}
<div class="container-full container-black">
    <div class="col-sm-12 col-centered text-center">
        <div class="timercontent">
            <div id="countdown">
            </div>
        </div>
    </div>
</div>
<div class="container-full container-grey">
    <div class="row">

        <div class="col-lg-12 text-center v-center">

            <!--timer-->




            <div class="row">
                <div class="col-sm-4 col-centered">

                    <img src="~/images/favours4favourslogo.png" class="img-responsive" />

                </div>
            </div>
            <h1>Website coming soon</h1>

            <p class="lead">A place where you can trade a favour for a favour.</p>
            <form asp-controller="Home" asp-action="Index" method="post" class="col-sm-8 col-md-6 col-centered">
                <div class="input-group">
                    <input class="form-control input-lg" title="Don't worry. We hate spam, and will not share your email with anyone." placeholder="Enter your email address for alerts and a free account" type="text">
                    <span class="input-group-btn"><button class="btn btn-lg btn-primary" type="button">Submit</button></span>
                </div>
            </form>
        </div>

    </div> <!-- /row -->

    <div class="row">

        <div class="col-lg-12 text-center v-center" style="font-size:39pt;">
            <a href="#"><i class="icon-google-plus"></i></a> <a href="#"><i class="icon-facebook"></i></a>  <a href="#"><i class="icon-twitter"></i></a> <a href="#"><i class="icon-github"></i></a> <a href="#"><i class="icon-pinterest"></i></a>
        </div>

    </div>


</div> <!-- /container full -->
<div class="container-full container-yellow">

    <div class="">
        <div class="col-sm-6 col-centered">
            <h2 class="text-center drk-grey">Get in touch today:</h2>
            <form asp-controller="Home" asp-action="Index" method="post" class="form-horizontal">

                <div class="form-group">
                    <label for="YourName" class="col-sm-2 control-label drk-grey">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="YourName" placeholder="Your Name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="YourEmail" class="col-sm-2 control-label drk-grey">Email</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="YourEmail" placeholder="Your Email">
                    </div>
                </div>

                <div class="form-group">
                    <label for="YourMessage" class="col-sm-2 control-label drk-grey">Message</label>
                    <div class="col-sm-10">
                        <textarea type="text" class="form-control" id="YourMessage" placeholder="Your Message" rows="4"></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-lg btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="container-full container-black">
    <div class="copyright">Copyright 2015 Favours4Favours.com</div>
</div>

@section scripts{
    <script src="js/timer.js"></script>
}
